package errorDetection;

class exception_handling 
{
    public static void main(String args[]) 
    {double sum = 2;
        try 
        {
            int i; ;
            sum = 10;
            for (i = -1; i < 3 ;++i)
                sum = (sum / i);
        }
        catch(ArithmeticException e) 
        {
    	System.out.print("0");        	
        } 
        System.out.print(sum);
    }
}
