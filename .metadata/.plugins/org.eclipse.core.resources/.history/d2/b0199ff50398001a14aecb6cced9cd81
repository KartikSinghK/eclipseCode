package frames;
import java.awt.*;
import java.awt.event.*;
public class Frames extends Frame implements MouseListener, MouseMotionListener {
     Frames(String title){
    	 super(title);
    	 
         this.addWindowListener(new WindowAdapter(){  
             public void windowClosing(WindowEvent e) {  
                 dispose();  
             }
         });  
         this.addMouseListener();
         setSize(400, 400);
         setVisible(true);
     }
};
